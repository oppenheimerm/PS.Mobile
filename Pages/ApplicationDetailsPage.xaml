<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PS.Mobile.Pages.ApplicationDetailsPage"
             xmlns:viewmodel="clr-namespace:PS.Mobile.ViewModels"
             x:DataType="viewmodel:ApplicationDetailsPageVM"
             Title="ApplicationDetailsPage">
    <VerticalStackLayout>
        <Label 
            Text="Petrol Stations"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Get Stations"
                    Command="{Binding GetStationsCommand}"/>
    </VerticalStackLayout>
</ContentPage>